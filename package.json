{
  "name": "ame-watcher",
  "version": "0.0.5",
  "description": "REST API to retrieve Adobe Media Encoder's status",
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "dev": "npm run lint && node ./bin/cli.js",
    "start": "forever start -o server.log -e error.log ./bin/cli.js",
    "stop": "forever stop ./bin/cli.js",
    "debug": "node-debug ./bin/cli.js --debug-brk",
    "test": "npm run lint && ava --verbose",
    "security": "nsp check",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "Adobe Media Encoder"
  ],
  "author": "Kuu Miyazaki",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "config": "^1.30.0",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "forever": "^0.15.3",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "coveralls": "^3.0.0",
    "nsp": "^3.2.1",
    "nyc": "^11.6.0",
    "proxyquire": "^2.0.1",
    "supertest": "^3.0.0",
    "xo": "^0.20.3"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "capitalized-comments": 0,
      "dot-notation": 0,
      "new-cap": 0,
      "no-cond-assign": 0,
      "no-mixed-operators": 0,
      "no-multi-assign": 0,
      "import/no-dynamic-require": 0,
      "unicorn/filename-case": 0
    }
  }
}
