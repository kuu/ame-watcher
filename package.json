{
  "name": "ame-watcher",
  "version": "0.0.4",
  "description": "REST API to retrieve Adobe Media Encoder's status",
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "dev": "npm run lint && node ./bin/cli.js",
    "start": "forever start -o server.log -e error.log ./bin/cli.js",
    "stop": "forever stop ./bin/cli.js",
    "debug": "node-debug ./bin/cli.js --debug-brk",
    "test": "npm run lint && nsp check && ava --verbose",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "Adobe Media Encoder"
  ],
  "author": "Kuu Miyazaki",
  "license": "MIT",
  "dependencies": {
    "body-parser": "~1.17.1",
    "config": "^1.26.2",
    "cookie-parser": "~1.4.3",
    "debug": "^3.0.1",
    "express": "~4.15.2",
    "forever": "^0.15.3",
    "morgan": "~1.8.1"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "coveralls": "^2.13.1",
    "nsp": "^2.8.0",
    "nyc": "^11.2.1",
    "proxyquire": "^1.8.0",
    "supertest": "^3.0.0",
    "xo": "^0.18.2"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "capitalized-comments": 0,
      "dot-notation": 0,
      "new-cap": 0,
      "no-cond-assign": 0,
      "no-mixed-operators": 0,
      "no-multi-assign": 0,
      "import/no-dynamic-require": 0,
      "unicorn/filename-case": 0
    }
  }
}
